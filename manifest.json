{
  "name": "Picture-in-Picture (PiP) for All 4",
  "description": "Enable Picture-in-Picture (PiP) on the Channel 4 'All 4' player",
  "version": "1.0.1",
  "manifest_version": 3,
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://www.channel4.com/programmes/*"],
      "js": ["arrive.min.js", "enable-pip.js"]
    }
  ],
  "icons": {
    "19": "/icons/icon19.png",
    "38": "/icons/icon38.png",
    "128": "/icons/icon128.png"
  }
}
